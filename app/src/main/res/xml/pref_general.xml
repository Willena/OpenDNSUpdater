<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:title="@string/pref_header_general"
        android:key="pref_general">
    <EditTextPreference
        android:key="OpenDns_Username"
        android:title="@string/Title_OpenDns_username"
        android:defaultValue="@string/default_username"
        android:selectAllOnFocus="true"
        android:inputType="textWebEmailAddress"
        android:capitalize="none"
        android:singleLine="true"
        android:maxLines="1"
        android:summary="@string/username_Description"/>

    <EditTextPreference
        android:key="OpenDns_Password"
        android:title="@string/Title_OpenDns_Password"
        android:defaultValue="@string/default_password"
        android:selectAllOnFocus="true"
        android:inputType="textPassword"
        android:capitalize="none"
        android:singleLine="true"
        android:maxLines="1"
        android:summary="@string/password_Description"/>
    </PreferenceCategory>

</PreferenceScreen>
